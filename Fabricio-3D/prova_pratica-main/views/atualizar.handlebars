        <input type="text" placeholder="Digite a descrição do livro..." value="{{book.descricao}}">
        <div>
            <label for="">Preço do livro:</label>
            <input type="text" placeholder="R$50,00" value="{{book.preco}}">
            <label for="">Quantidade disponível:</label>
